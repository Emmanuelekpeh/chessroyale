{
  "name": "chessroyale",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "yarn workspaces foreach -pi run dev",
    "build": "yarn workspaces foreach -pi run build",
    "test": "yarn workspaces foreach -pi run test",
    "lint": "yarn workspaces foreach -pi run lint",
    "db:migrate": "yarn workspace server run db:migrate",
    "db:seed": "yarn workspace server run db:seed",
    "clean": "yarn workspaces foreach -pi run clean"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^2.0.0",
    "typescript": "^4.0.0"
  }
}
