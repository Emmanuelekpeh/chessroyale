{
  "name": "chessroyale",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
    "scripts": {
    "prepare": "node scripts/check-dependencies.js && yarn install",
    "postinstall": "yarn setup:env && yarn setup:python",
    "setup:env": "node scripts/create-env.js",
    "setup:python": "pip install scikit-learn numpy pandas",
    "setup:db": "yarn db:migrate && yarn db:seed",
    "db:migrate": "drizzle-kit push:pg",
    "db:seed": "tsx scripts/seed.ts",
    "dev": "yarn workspaces foreach -pi run dev",
    "build": "yarn workspaces foreach -pi run build",
    "start": "node dist/server/index.js"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^2.0.0",
    "typescript": "^4.0.0"
  }
}
