{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../shared/src/*"]
    },
    "types": [
      "node",
      "express",
      "passport",
      "passport-local",
      "express-session",
      "cors",
      "compression",
      "ws"
    ],
    "rootDir": ".",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "vite.config.ts",
    "config.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../shared" }]
}
